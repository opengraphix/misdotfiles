	engine "murrine" {
	  contrast = 0.0
    glazestyle          = 0
		toolbarstyle	    = 1    # 0 = flat, 1 = glassy, 2 = gradient
		gradient_shades     = {0.80,0.86,0.89,1.0} # default: {1.1,1.0,1.0,1.1}
	}
}

